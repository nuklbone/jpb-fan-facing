# ------------------------------------------------------------
#  Fan-Facing Musician Site  Environment Variables
# Copy to .env.local and fill in project-specific credentials.
# ------------------------------------------------------------

# === App ===
NEXT_PUBLIC_APP_URL=http://localhost:3000

# === Supabase (Fan Club & Data Layer) ===
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# === Resend (Transactional & Broadcast Email) ===
RESEND_API_KEY=
RESEND_FROM_EMAIL=no-reply@yourdomain.com

# === Shopify (Merch Storefront) ===
SHOPIFY_STORE_DOMAIN=your-store.myshopify.com
SHOPIFY_ADMIN_API_TOKEN=
SHOPIFY_STOREFRONT_API_TOKEN=
SHOPIFY_STOREFRONT_API_VERSION=2024-01

# === Bandsintown (Live Shows Feed) ===
BANDSINTOWN_APP_ID=
BANDSINTOWN_ARTIST=Band Name

# === Analytics & Experience ===
NEXT_PUBLIC_GA_MEASUREMENT_ID=
NEXT_PUBLIC_HOTJAR_ID=
NEXT_PUBLIC_HOTJAR_SV=

# === Email CRM / Marketing (Optional) ===
NEXT_PUBLIC_MAILCHIMP_AUDIENCE_ID=
MAILCHIMP_API_KEY=

# === Admin Contacts ===
ADMIN_EMAIL=admin@yourdomain.com
FAN_SUPPORT_EMAIL=support@yourdomain.com

# === Feature Flags (Optional Toggles) ===
NEXT_PUBLIC_ENABLE_SOCIAL_FEED=true
NEXT_PUBLIC_ENABLE_INNER_CIRCLE=true

